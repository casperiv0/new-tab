{
  "name": "new-tab",
  "version": "0.8.2",
  "license": "MIT",
  "scripts": {
    "dev": "next dev -p 4000",
    "build": "next build && next export",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md,css,json}\" --ignore-path .gitignore",
    "lint": "eslint . --ext .ts,.js,.tsx,.jsx",
    "extension": "next build && next export -o extension/html && cp extension/manifest.json extension/html/manifest.json",
    "dev:pkg": "npm run extension && web-ext run && rm -rf extension/html",
    "pkg": "npm run extension && web-ext build --overwrite-dest"
  },
  "dependencies": {
    "@casper124578/useful": "^1.4.6",
    "date-fns": "^2.28.0",
    "is-url": "^1.2.4",
    "next": "^12.0.10",
    "prepend-http": "^4.0.0",
    "react": "^17.0.2",
    "react-bootstrap-icons": "^1.7.2",
    "react-dom": "^17.0.2",
    "react-modal": "^3.14.4"
  },
  "devDependencies": {
    "@casper124578/eslint-config": "^2.3.2",
    "@casper124578/eslint-config-next": "^1.2.1",
    "@casper124578/eslint-config-react": "^2.2.1",
    "@types/is-url": "^1.2.30",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/react-modal": "^3.13.1",
    "eslint": "^8.8.0",
    "preact": "^10.5.15",
    "prettier": "^2.5.1",
    "sass": "^1.49.4",
    "typescript": "^4.5.5",
    "web-ext": "^6.7.0"
  },
  "webExt": {
    "sourceDir": "extension/html",
    "ignoreFiles": [
      "package.json",
      "package-lock.json"
    ]
  }
}
